<% if flash[:notice] %>
	<div style="font-family:'Trebuchet MS'; color:#FF0000; font-size:14px;"><%= flash[:notice] %></div>
<% end %>
 
<!--creates form, exectues the authenticate method when the submit button is clicked-->
<%= form_tag :action=>'authenticate' %>
Email address:
<%= text_field("userform", "email",:size=>"20" ) %>
Password:
<%= password_field("userform", "password",:size=>"20" ) %>
<input type="submit" value=" LOGIN " />
</form>